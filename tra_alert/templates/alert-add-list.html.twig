{#
/**
 * @file
 * Default theme implementation to list alert types available for adding content.
 *
 * This list is displayed on the Add alert admin page.
 *
 * Available variables:
 * - types: A list of alert types, each with the following properties:
 *   - add_link: Link to create a piece of content of this type.
 *
 * @see template_preprocess_alert_add_list()
 *
 * @ingroup themeable
 */
#}
{% if types is not empty %}
  <ul class="admin-list">

    {% for type in types %}
      <li class="clearfix">
        {{ type.add_link }}
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p>
    {% set create_content = path('alert.type_add') %}
    {% trans %}
      You have not created any alert types yet. Go to the <a href="{{ create_content }}">alert type creation page</a> to add a new alert type.
    {% endtrans %}
  </p>
{% endif %}
